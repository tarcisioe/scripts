#!/bin/bash

source scriptlib-init

require dependencies
require util


usage() {
echo "\
Usage: $(script-name) [OPTION...]
Play the link on the clipboard with mpv.

Optional arguments:
    -h/--help    Print this help message and exit."
}


_playlink() {
    mpv "$(xclip -o)" 2> /dev/null & disown
}


depend mpv
main _playlink "$@"
